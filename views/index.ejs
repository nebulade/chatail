<% include header %>

<div class="navbar navbar-fixed-top">
    <h1>Chatail</h1>
</div>

<div class="container">

    <div class="row">
        <div class="col-md-12">

            <div class="container bottom-space">
<%
for (var i = 0; i < messages.length; i++) {
    if (messages[i].from.indexOf(owner) !== -1) {
%>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-7 alert alert-success"><%- messages[i].body.replace(/\n/g, '<br/>') %></div>
                    <div class="col-md-2"><h3>Me</h3></div>
                </div>
<%
    } else {
%>
                <div class="row">
                    <div class="col-md-4"><h4><%= messages[i].from %></h4></div>
                    <div class="col-md-7 alert alert-info"><%- messages[i].body.replace(/\n/g, '<br/>') %></div>
                    <div class="col-md-1"></div>
                </div>
<%
    }
}
%>
            </div>
        </div>
    </div>
</div>


<div class="navbar navbar-fixed-bottom">
    <form action="/send" method="POST">
        <div class="form-group" style="padding: 10px; padding-left: 10%; padding-right: 10%;">
            <div class="col-sm-3">
                <input type="text" class="form-control" name="to" value="johannes.zellner@nokia.com" placeholder="email@to.chat">
            </div>
            <div class="col-sm-9">
                <div class="input-group">
                    <input type="text" class="form-control" name="message" autofocus="true">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Send</button>
                    </span>
                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
   window.scrollTo(0,document.body.scrollHeight);
</script>

<% include footer %>